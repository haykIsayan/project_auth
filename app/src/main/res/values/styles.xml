<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AuthButtonTheme" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">@dimen/auth_button_width</item>
        <item name="android:layout_height">@dimen/auth_button_height</item>
        <item name="android:textSize">@dimen/auth_button_text_size</item>
        <item name="cornerRadius">@dimen/auth_button_corner_radius</item>
        <item name="iconSize">@dimen/auth_button_icon_size</item>
        <item name="backgroundTint">@color/authButtonBackground</item>
    </style>

    <style name="AuthMessageTheme" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/authButtonBackground</item>
        <item name="rippleColor">@color/authMessageRipple</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/auth_message_text_size</item>
    </style>

    <style name="AuthFabTheme" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="shapeAppearance">@style/AuthFabShape</item>
    </style>

    <style name="AuthFabShape">
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerFamilyBottomLeft">cut</item>
        <item name="cornerSize">25dp</item>
    </style>

</resources>
